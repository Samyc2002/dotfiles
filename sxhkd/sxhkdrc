#################
# DMENU SCRIPTS #
#################

# program launcher
super + r
  ~/.config/rofi/launchers/type-2/launcher.sh
  # python3 /home/samy/.config/dmenu/run.py

# config editor
super + c
	python3 /home/samy/.config/dmenu/config.py

# productivity
# super + p
	# python3 /home/samy/.config/dmenu/productivity.py

# google search
super + g
	python3 /home/samy/.config/dmenu/google-search.py

# Clipboard manager
super + v
  python3 /home/samy/.config/dmenu/clipboard.py

# Wifi Manager
super + w
  python3 /home/samy/.config/dmenu/wifi.py

#run exit script
super + shift + q
  ~/.config/rofi/powermenu/type-2/powermenu.sh
	# python3 /home/samy/.config/dmenu/exit.py

# Password Manager
super + shift + p
	python3 /home/samy/.config/dmenu/password.py

# Volume Manager
super + shift + v
    ~/.config/rofi/applets/bin/volume.sh

# Power Manager
super + shift + b
    ~/.config/rofi/applets/bin/battery.sh

##########################
# WM INDEPENDENT HOTKEYS #
##########################

# terminal emulator
super + Return
	alacritty -e tmux attach

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#################
# BSPWM HOTKEYS #
#################

# quit/restart bspwm
super + ctrl + {r}
	bspc {wm -r}

# close and kill
super + {shift + c,x}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

###############
# STATE/FLAGS #
###############

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

##############
# FOUS/SWAP #
##############

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#############
# PRESELECT #
#############

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

###############
# MOVE/RESIZE #
###############

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

##################
# CUSTOM KEYBNDS #
##################

# Lock Screen
super + q
	  betterlockscreen -l dim
#	  xscreensaver-command -lock

# Screenshot
super + shift + p
	  gnome-screenshot

# File Manager
super + alt + e
	  pcmanfm

# Emacs
super + a
	  emacsclient -c -a "emacs"
super + e
		xdotool key super+a; sleep 1; xdotool key super+t

# Discord
super + d
      ~/Discord/Discord

# Brightness
XF86MonBrightnessUp
	xbacklight +10
XF86MonBrightnessDown
	xbacklight -10

# Screenshot
super + shift + p
	spectacle

# htop
super + shift + Return
	alacritty

# Media controls
# XF86AudioPlay
# 	mocp --toggle-pause
# XF86AudioPrev
# 	mocp --previous
# XF86AudioNext
# 	mocp --next
XF86AudioMute
	amixer -D pulse sset Master toggle
XF86AudioLowerVolume
	amixer -D pulse sset Master 5%- unmute
XF86AudioRaiseVolume
	amixer -D pulse sset Master 5%+ unmute
