[colors]
background = #282c34
background-alt = #282c34
foreground = #bbc2cf
foreground-alt = #bbc2cf
primary = #a9a1e1
secondary = #4db5bd
alert = #ff6c6b


[bar/mainbar0]
inherit = bar/barbase
modules-left = ewmh
[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t ~/.config/leftwm/themes/basic_polybar/template.liquid
tail = true

